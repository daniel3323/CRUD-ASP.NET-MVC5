@model TesteITAU.Models.Login

@{
    ViewBag.Title = "Logar";
}

<h2>Login</h2>

@using (Html.BeginForm("Logar", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(login => login.LoginUsuario, new { htmlAttributes = new { @class = "form-control", @required = "true", @placeholder = "Login" } })
                @Html.ValidationMessageFor(login => login.LoginUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(login => login.Senha, new { htmlAttributes = new { @class = "form-control", @required = "true", @placeholder = "Senha" } })
                @Html.ValidationMessageFor(login => login.Senha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Confirmar" class="btn btn-success" />
            </div>
        </div>
    </div>
}


