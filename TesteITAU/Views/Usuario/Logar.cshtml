@model TesteITAU.Models.Usuario

@{
    /**/

    ViewBag.Title = "Home Page";
}

<h2>Login</h2>


@using (Html.BeginForm("Logar", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />

        <h4>Dados Pessoais</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(usuario => usuario.Login, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(usuario => usuario.Login, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(usuario => usuario.Login, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(usuario => usuario.Senha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(usuario => usuario.Senha, new { htmlAttributes = new { @class = "form-control", @required = "true", @type = "password" } })
                @Html.ValidationMessageFor(usuario => usuario.Senha, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-success" />
        </div>
    </div>
}


