@model TesteITAU.Models.Conta

@{
    ViewBag.Title = "ExibirDadosConta";
}

<h2>ExibirDadosConta</h2>

@using (Html.BeginForm("ExibirDadosConta", "Conta", FormMethod.Get)) 
{
    @Html.AntiForgeryToken()

<div class="container">
    <div class="form-horizontal">
        <hr />
        <br />
        <h3>Parabéns, sua conta foi criada com sucesso!</h3>
        <h4>Abaixo estão seus dados bancários, é muito importante te-los guardados consigo.</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div>
                @Html.LabelFor(conta => conta.NumeroConta, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(conta => conta.NumeroConta, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(conta => conta.NumeroConta, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(conta => conta.Saldo, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(conta => conta.Saldo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(conta => conta.Saldo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>            
</div>
}
