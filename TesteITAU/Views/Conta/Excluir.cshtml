@model TesteITAU.Models.Conta

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

@using (Html.BeginForm("Excluir", "Conta", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <br />
        <br />

        <h4>Por gentileza, digite o número da conta que deseja Excluir</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(conta => conta.NumeroConta, new { htmlAttributes = new { @class = "form-control", @required = "true", @placeholder = "Número da Conta" } })
                @Html.ValidationMessageFor(conta => conta.NumeroConta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Excluir" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#NumeroConta').mask('0000-0');
    </script>
}
