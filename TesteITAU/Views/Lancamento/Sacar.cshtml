@model TesteITAU.Models.Lancamento

@{
    ViewBag.Title = "Sacar";
}

<h2>Saque</h2>

@using (Html.BeginForm("Sacar", "Lancamento", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Insira o valor da transação</h4>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(lancamento => lancamento.Valor, new { htmlAttributes = new { @class = "form-control", @placeholder = "Insira o valor do Saque" } })
                @Html.ValidationMessageFor(lancamento => lancamento.Valor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
